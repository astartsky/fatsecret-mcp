{
  "name": "fatsecret-mcp-server",
  "version": "0.1.0",
  "description": "Model Context Protocol server for FatSecret API with 3-Legged OAuth support",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run src/__tests__/integration/"
  },
  "keywords": [
    "mcp",
    "fatsecret",
    "nutrition",
    "api",
    "oauth"
  ],
  "author": "Dmitry Sinev <me@ast.rocks>",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "@types/node": "^20.0.0",
    "dotenv": "^17.0.1",
    "node-fetch": "^3.3.2",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^2.1.9",
    "typescript": "^5.8.3",
    "vitest": "^2.1.0"
  },
  "bin": {
    "fatsecret-mcp-server": "./dist/index.js"
  },
  "files": [
    "dist/"
  ]
}
